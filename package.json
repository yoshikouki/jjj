{
	"name": "jjj",
	"version": "0.0.0",
	"license": "MIT",
	"bin": "dist/cli.js",
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"start": "bun run src/cli.tsx",
		"test": "biome check --write && ava",
		"prepare": "husky",
		"lint": "biome check --write",
		"format": "biome format --write",
		"typecheck": "tsc --noEmit"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"ink": "^4.1.0",
		"meow": "^11.0.0",
		"react": "^18.2.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.0",
		"@sindresorhus/tsconfig": "^3.0.1",
		"@testing-library/react": "^16.3.0",
		"@testing-library/react-hooks": "^8.0.1",
		"@types/bun": "latest",
		"@types/react": "^18.0.32",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
		"husky": "^9.1.7",
		"ink-testing-library": "^3.0.0",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.3"
	},
	"ava": {
		"extensions": {
			"ts": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm",
			"--experimental-specifier-resolution=node"
		]
	}
}
